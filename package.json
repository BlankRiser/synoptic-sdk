{
	"name": "@devhaven/synoptic-sdk-monorepo",
	"license": "MIT",
	"private": true,
	"keywords": [
		"synoptic data",
		"weather",
		"api",
		"sdk",
		"typescript"
	],
	"packageManager": "bun@1.3.1",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"core": "bun run --cwd packages/core",
		"core:add": "bun add --cwd packages/core",
		"check": "biome check ./packages ./apps",
		"lint": "biome lint ./packages ./apps",
		"format": "biome format ./packages ./apps",
		"build": "turbo run build",
		"dev": "turbo run dev"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.2"
	},
	"publishConfig": {
		"access": "public"
	},
	"homepage": "https://github.com/BlankRiser/synoptic-sdk#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/BlankRiser/synoptic-sdk.git"
	},
	"bugs": {
		"url": "https://github.com/BlankRiser/synoptic-sdk/issues"
	}
}
